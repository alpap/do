{
  "name": "do",
  "version": "0.1.0",
  "description": "A cli tool for the most anoying manual processes",
  "keywords": [
    "do",
    "cli",
    "json"
  ],
  "homepage": "https://github.com/sources/do",
  "bugs": "https://github.com/sources/do/issues",
  "repository": "sources/do",
  "license": "MIT",
  "author": "Alexandros Papadopoulos",
  "type": "module",
  "exports": "./lib/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "do": "./bin/run.js"
  },
  "files": [
    "/bin",
    "/dist",
    "/oclif.manifest.json"
  ],
  "scripts": {
    "oclif": "oclif",
    "build": "shx rm -rf dist && tsc -b",
    "pack:win": "oclif pack win",
    "pack:macos": "oclif pack macos",
    "pack:linux": "oclif pack linux",
    "lint": "eslint . --ext .ts",
    "prepack": "pnpm run build && oclif manifest && oclif readme",
    "postpack": "shx rm -f oclif.manifest.json",
    "prepare": "pnpm run build",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "posttest": "pnpm run lint",
    "version": "oclif readme && git add README.md"
  },
  "oclif": {
    "bin": "do",
    "commands": "./dist/commands",
    "dirname": "do",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins",
      "@oclif/plugin-autocomplete",
      "@oclif/plugin-commands",
      "@oclif/plugin-version",
      "@oclif/plugin-warn-if-update-available"
    ],
    "topicSeparator": " ",
    "topics": {
      "hello": {
        "description": "Say hello to the world and others"
      }
    }
  },
  "dependencies": {
    "@oclif/core": "^3",
    "@oclif/plugin-autocomplete": "^3.0.15",
    "@oclif/plugin-commands": "^3.3.1",
    "@oclif/plugin-help": "^6",
    "@oclif/plugin-plugins": "^5",
    "@oclif/plugin-version": "^2.0.17",
    "@oclif/plugin-warn-if-update-available": "^3.1.4",
    "chalk": "^5.3.0",
    "prettier": "^3.2.5",
    "sort-keys": "^5.0.0"
  },
  "devDependencies": {
    "@oclif/prettier-config": "^0.2.1",
    "@oclif/test": "^3",
    "@types/chai": "^4",
    "@types/mocha": "^10",
    "@types/node": "^18",
    "chai": "^4",
    "eslint": "^8",
    "eslint-config-oclif": "^5",
    "eslint-config-oclif-typescript": "^3",
    "eslint-config-prettier": "^9.1.0",
    "mocha": "^10",
    "oclif": "^4.8.2",
    "shx": "^0.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
